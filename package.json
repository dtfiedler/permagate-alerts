{
  "name": "permagate-alerts",
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "main": "dist/app.js",
  "author": "Dylan Fiedler (@dtfiedler)",
  "license": "MIT",
  "scripts": {
    "start": "node --import ./register.mjs --env-file=.env src/app.ts",
    "format:fix": "prettier --write src app",
    "clean": "rimraf [ node_modules dist ]",
    "build": "yarn clean && yarn && npx tsc --project ./tsconfig.json && mkdir dist/public && cp -r src/public dist",
    "migrate:latest": "yarn knex migrate:latest --knexfile ./src/db/knexfile.ts --env local",
    "migrate:rollback": "yarn knex migrate:rollback --knexfile ./src/db/knexfile.ts --env local",
    "migrate:make": "yarn knex migrate:make $1 --knexfile ./src/db/knexfile.ts --env local",
    "migrate:up": "node --import ./register.mjs --env-file=.env ./node_modules/.bin/knex migrate:up --knexfile ./src/db/knexfile.ts --env local",
    "migrate:down": "node --import ./register.mjs --env-file=.env ./node_modules/.bin/knex migrate:down $1 --knexfile ./src/db/knexfile.ts --env local",
    "migrate:app:up": "yarn build && node --import ./register.mjs --env-file=.env knex migrate:up --knexfile ./dist/db/knexfile.js --env development",
    "migrate:app:down": "yarn build && node --import ./register.mjs --env-file=.env knex migrate:down $1 --knexfile ./dist/db/knexfile.js --env development",
    "migrate:app:rollback": "yarn build && node --import ./register.mjs --env-file=.env knex migrate:rollback --knexfile ./dist/db/knexfile.js --env development",
    "docs": "markdown-toc-gen insert README.md",
    "test": "yarn test:e2e",
    "test:e2e": "node --import=./register.mjs --test --test-concurrency 1 --test-reporter=spec --test-reporter-destination=stdout tests/*.test.ts"
  },
  "devDependencies": {
    "@swc/core": "^1.7.14",
    "@testcontainers/localstack": "^10.9.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.17",
    "@types/mailgun-js": "^0.22.18",
    "@types/node": "^18.15.11",
    "@types/node-cron": "^3.0.11",
    "cross-env": "^7.0.3",
    "markdown-toc-gen": "^1.0.1",
    "nock": "^13.5.5",
    "nodemon": "^2.0.22",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-esm": "^0.0.6",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@ar.io/sdk": "^3.8.1",
    "arweave": "^1.15.1",
    "auth0": "^4.7.0",
    "better-sqlite3": "^11.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.3",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "knex": "^3.1.0",
    "mailgun.js": "^10.2.3",
    "node-cron": "^3.0.3",
    "prom-client": "^15.1.3",
    "puppeteer": "^23.4.1",
    "winston": "^3.12.0",
    "zod": "^3.23.8"
  }
}
